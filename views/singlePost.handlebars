<div class="post">
        <form id="post-id" class="card-body">
    <input type="hidden" id="post-id" value="{{post.id}}" />
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.user.username}} on {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.content}}
        </div>

            <button id="deleteBTN" type="submit" class="btn">Claim</button>

  
      </form>

      
  <script src="/javascript/post-comments.js"></script>
    <script src="javascript/delete.js"></script>